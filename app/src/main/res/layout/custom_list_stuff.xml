<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    android:id="@+id/tableLayout_listItems"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="4"
    android:fitsSystemWindows="true"
    android:longClickable="true"
    >

    <RelativeLayout
        android:layout_height="50dp"
        android:layout_width="match_parent">

        <ImageView
            android:id="@+id/imageViewItem"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            app:srcCompat="@drawable/ic_shopping_basket_black_24dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/checkBox_posseder"
            android:layout_toRightOf="@id/imageViewItem"
            android:gravity="center"
            >

            <TextView
                android:textColor="@color/colorAccent"
                android:id="@+id/textView_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="TextView"
                android:textSize="30dp"
                />



            <TextView
                android:textColor="@color/colorAccent"
                android:id="@+id/textView_quantity"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="TextView"
                android:textSize="30dp"
               />



        </LinearLayout>



        <CheckBox
            android:id="@+id/checkBox_posseder"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"

            />

    </RelativeLayout>




</TableLayout>